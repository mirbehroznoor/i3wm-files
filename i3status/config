          # format_quality = "%d%s"
        format_up = "<span background = '#00ee00' foreground='#ffffff'></span><span background='#00ee00'> %essid ~ %bitrate </span>"
        format_down = "<span background='#ff0000'> üì° </span><span background='#e5e9f0'></span>"
}volume master {
        format = "<span background='#ffffff'> üîä %volume </span>"
        format_muted = "<span background='#ffffff'> üéú Muted </span>"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}read_file BRIGHTNESS {
           format ="<span background='#ffffff'> üîÖ %content% </span>"
